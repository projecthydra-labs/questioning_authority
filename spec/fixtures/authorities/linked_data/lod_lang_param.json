{
  "QA_CONFIG_VERSION": "2.0",
  "prefixes": {
    "dcterms": "http://purl.org/dc/terms/",
    "loc":     "http://id.loc.gov/vocabulary/identifiers/"
  },
  "term": {
    "url": {
      "@context": "http://www.w3.org/ns/hydra/context.jsonld",
      "@type":    "IriTemplate",
      "template": "{term_uri}?{?lang}",
      "variableRepresentation": "BasicRepresentation",
      "mapping": [
        {
          "@type":    "IriTemplateMapping",
          "variable": "term_uri",
          "property": "hydra:freetextQuery",
          "required": true
        },
        {
          "@type":    "IriTemplateMapping",
          "variable": "lang",
          "property": "hydra:freetextQuery",
          "required": false,
          "default":  "en"
        }
      ]
    },
    "qa_replacement_patterns": {
      "term_id": "term_uri"
    },
    "term_id": "URI",
    "results": {
      "id_ldpath":       "loc:lccn",
      "label_ldpath":    "skos:prefLabel",
      "altlabel_ldpath": "skos:altLabel"
    }
  },
  "search": {
    "url": {
      "@context": "http://www.w3.org/ns/hydra/context.jsonld",
      "@type":    "IriTemplate",
      "template": "http://localhost/test_replacement/search?{?query}&{?lang}",
      "variableRepresentation": "BasicRepresentation",
      "mapping": [
        {
          "@type":    "IriTemplateMapping",
          "variable": "query",
          "property": "hydra:freetextQuery",
          "required": true
        },
        {
          "@type":    "IriTemplateMapping",
          "variable": "lang",
          "property": "hydra:freetextQuery",
          "required": false,
          "default":  "en"
        }
      ]
    },
    "qa_replacement_patterns": {
      "query": "query"
    },
    "results": {
      "id_ldpath":       "dcterms:identifier",
      "label_ldpath":    "skos:prefLabel",
      "altlabel_ldpath": "skos:altLabel",
      "sort_ldpath":     "skos:prefLabel"
    }
  }
}
